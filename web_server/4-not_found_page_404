#!/usr/bin/env bash
# Configures Nginx with a custom 404 page containing "Ceci n'est pas une page"

# Exit on error
set -e

# Install Nginx if not installed
apt-get update -qq && apt-get install -y nginx -qq

# Ensure the web root directory exists
mkdir -p /var/www/html

# Create the custom 404 page
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Configure Nginx with a custom 404 page
cat > /etc/nginx/sites-available/default << 'EOL'
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm;

    server_name _;

    location / {
        return 200 "Holberton School";
        add_header Content-Type text/plain;
    }

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }

    # Custom 404 page
    error_page 404 /404.html;
    location = /404.html {
        internal;
    }
}
EOL

# Ensure proper permissions
chmod 644 /var/www/html/404.html

# Test and reload Nginx configuration
nginx -t && service nginx reload

